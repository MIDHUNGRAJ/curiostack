{
  "name": "curiostack-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "analyze": "ANALYZE=true next build",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "postinstall": "prisma generate",
    "clean": "rm -rf .next out",
    "build:analyze": "npm run build && npm run analyze",
    "build:prod": "NODE_ENV=production npm run build",
    "start:prod": "NODE_ENV=production npm run start",
    "deploy:build": "npm run db:generate && npm run build:prod",
    "deploy:start": "npm run db:migrate && npm run start:prod",
    "test:db": "node test-db-connection.js"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@types/pg": "^8.15.5",
    "@types/react-syntax-highlighter": "^15.5.13",
    "chart.js": "^4.5.0",
    "critters": "^0.0.25",
    "date-fns": "^2.30.0",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.536.0",
    "next": "^14.2.31",
    "pg": "^8.16.3",
    "react": "^18",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18",
    "react-hook-form": "^7.62.0",
    "react-intersection-observer": "^9.16.0",
    "react-markdown": "^9.0.0",
    "react-syntax-highlighter": "^15.6.3",
    "remark-gfm": "^4.0.0",
    "remark-html": "^16.0.0",
    "sharp": "0.34.3"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.30",
    "@types/jest": "^29.5.8",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "postcss": "^8",
    "prettier": "^3.6.2",
    "prisma": "^6.16.2",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
